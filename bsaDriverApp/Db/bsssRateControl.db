record(bo, "$(DEVICE):$(BSSS_INST):ENB")
{
    field(DESC, "enable/disable for BSSS EDEF $(IDX)")
    field(PINI, "YES")
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(PORT),0) edefEnable_$(IDX)")
    field(DOL, "$(GLOBAL):BSSS$(BSSS_INST):ENB CPP NMS")
    field(OMSL, "closed_loop")
    field(ZNAM, "Disable")
    field(ONAM, "Enable")
    info(autosaveFields, "VAL")
}

