file serviceControl.db {
    pattern {   DEVICE,   SERVICE }
            { "$(DEV)",   "BLD" }
}

file serviceStatus.db {
    pattern {   DEVICE,  SERVICE }
            { "$(DEV)",  "BLD" }
}


file serviceRateControl.db {
    pattern {  BUFF_NUM,  DESC,          DEVICE,  GLOBAL,       SERVICE       }
            {  "1",       "SCSBR",  "$(DEV)", "\$\(GLOBAL=BLD:SYS0:1\)", "BLD"        }
            {  "2",       "SCHBR",  "$(DEV)", "\$\(GLOBAL=BLD:SYS0:1\)", "BLD"        } 
            {  "3",       "Spare1", "$(DEV)", "\$\(GLOBAL=BLD:SYS0:1\)", "BLD"        }
            {  "4",       "Spare2", "$(DEV)", "\$\(GLOBAL=BLD:SYS0:1\)", "BLD"        }
}


file bldSpecific.db {
    pattern {   BLD_BUFF,  DEVICE,       DESC }
            {   "1",      "$(DEV)",      "SCSBR"  }
            {   "2",      "$(DEV)",      "SCHBR"  }
            {   "3",      "$(DEV)",      "Spare1"  }
            {   "4",      "$(DEV)",      "Spare2"  }
}
