
#   Service control PVs
#   affect entire service
#


record(bo, "$(DEVICE):$(SERVICE)_CTRL")
{
    field(DESC, "Enable or Disable $(SERVICE) locally in IOC")
    field(PINI, "YES")
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(PORT),0) $(SERVICE)_enable")
    field(OMSL, "supervisory")
    field(SCAN, "Passive")
    field(ZNAM, "Disable")
    field(ONAM, "Enable")
    # We want to alert the world if $(SERVICE) is disabled locally
    field(ZSV, "MAJOR")
    field(VAL, "1")
    info(autosaveFields, "VAL")
}

record(longout, "$(DEVICE):$(SERVICE)_PKTSZ")
{
    field(DESC, "Set $(SERVICE) Packet Size")
    field(PINI, "YES")
    field(VAL, "9216")
    field(DRVH, "9216")
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(PORT), 0) $(SERVICE)_packetSize")
    field(OMSL, "supervisory")
    field(SCAN, "Passive")
    info(autosaveFields, "VAL")
}
