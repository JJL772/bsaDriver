
#   Service control PVs
#   affect entire service
#


record(bo, "$(DEVICE):$(SERVICE)_LOCALCTRL")
{
    field(DESC, "Enable $(SERVICE)")
    field(PINI, "YES")
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(PORT),0) $(SERVICE)_enable")
    field(OMSL, "supervisory")
    field(SCAN, "Passive")
    field(ZNAM, "Disable")
    field(ONAM, "Enable")
    field(VAL, "1")
    info(autosaveFields, "VAL")
}


