
#   Service control PVs
#   affect entire service
#


record(bo, "$(DEVICE):$(SERVICE)_OVERRIDE_CTRL")
{
    field(DESC, "Enable or Disable $(SERVICE) locally in IOC")
    field(PINI, "YES")
    field(DTYP, "asynInt32")
    field(OUT, "@asyn($(PORT),0) $(SERVICE)_enable")
    field(OMSL, "supervisory")
    field(SCAN, "Passive")
    field(ZNAM, "Disable")
    field(ONAM, "Enable")
    field(VAL, "1")
    info(autosaveFields, "VAL")
}

# Break the connection with the global PVs, so one can set BLD and BSAS
# timing filtering locally
record(bo, "$(DEVICE):$(SERVICE)_NOGLOBAL")
{
    field(DESC, "Disable Global PVs")
    field(ONAM, "Use Global Ctrl")
    field(ZNAM, "No Global")
    field(VAL,  "1")
    field(PINI, "YES")
    info(autosaveFields, "VAL")
}
