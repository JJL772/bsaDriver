#
#   BSSS status monitoring PVs
#

record(longin, "$(DEVICE):BSSS_ST:CURPKTSZ")
{
    field(DESC, "BSSS Current Packet Size")
    field(DTYP, "asynInt32")
    field(INP,  "@asyn($(PORT), 0) currPacketSize")
    field(SCAN, "I/O Intr")
}

