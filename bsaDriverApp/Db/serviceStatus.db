#
#   service status monitoring PVs
#

record(longin, "$(DEVICE):$(SERVICE)_ST:CURPKTSZ")
{
    field(DESC, "$(SERVICE) Current Packet Size")
    field(DTYP, "asynInt32")
    field(INP,  "@asyn($(PORT), 0) $(SERVICE)_currPacketSize")
    field(SCAN, "I/O Intr")
}

record(mbbi, "$(DEVICE):$(SERVICE)_ST:CURPKTST")
{
    field(DESC, "$(SERVICE) Current Packet Status")
    field(DTYP, "asynInt32")
    field(INP, "@asyn($(PORT), 0) $(SERVICE)_currPacketStatus")
    field(SCAN, "I/O Intr")
    field(ZRVL, "0")
    field(ONVL, "1")
    field(TWVL, "2")
    field(THVL, "3")
    field(FRVL, "4")
    field(FVVL, "5")
    field(SXVL, "6")
    field(SVVL, "7")
    field(EIVL, "8")
    field(NIVL, "9")
    field(TEVL, "10")
    field(ELVL, "11")
    field(TVVL, "12")
    field(TTVL, "13")
    field(FTVL, "14")
    field(FFVL, "15")
    field(ZRST, "Idle")
    field(ONST, "TSL")
    field(TWST, "TSU")
    field(THST, "PIDL")
    field(FRST, "PIDU")
    field(FVST, "CHM")
    field(SXST, "DLT")
    field(SVST, "SVC")
    field(EIST, "CHD")
    field(NIST, "END")
    field(TEST, "Invalid_10")
    field(ELST, "Invalid_11")
    field(TVST, "Invalid_12")
    field(TTST, "Invalid_13")
    field(FTST, "Invalid_14")
    field(FFST, "Invalid_15")
}

